<%= form_with(model: @property) do |f| %>
<div class="card m-3">
  <div class="card-body">

    <div class="mb-3">
      <%= f.label :owner, { class: "form-label"} %>
      <%= f.text_field :owner, { class: "form-control", placeholder: "owner" } %>
    </div>

    <div class="mb-3">
      <%= f.label :address, { class: "form-label"} %>
      <%= f.text_field :address, { class: "form-control", placeholder: "address" } %>
    </div>

    <div class="mb-3">
      <%= f.label :property_type, { class: "form-label"} %>
      <%= f.text_field :property_type, { class: "form-control", placeholder: "property type" } %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>